{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "build": "nuxt build",
    "start": "node .output/server/index.mjs",
    "dev": "npx nuxi@latest dev --no-fork",
    "dev:inspect": "npx nuxi@latest dev --inspect",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "typecheck": "nuxt typecheck",
    "db:generate": "drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config=drizzle.config.ts",
    "gtfs:init": "node ./gtfs/init.js",
    "gtfs:migrate": "drizzle-kit migrate --config=drizzle-gtfs.config.ts"
  },
  "devDependencies": {
    "@nuxt/devtools": "latest",
    "@nuxt/ui": "^2.20.0",
    "@nuxtjs/device": "^3.2.4",
    "@types/better-sqlite3": "^7.6.12",
    "@types/sanitize-html": "^2.13.0",
    "drizzle-kit": "^0.30.1",
    "nuxt": "^3.14.1592",
    "nuxt-auth-utils": "^0.5.7",
    "nuxt-authorization": "^0.3.2",
    "nuxt-cron": "^1.8.0",
    "nuxt-rate-limit": "^1.2.0",
    "typescript": "^5.7.3",
    "vue": "latest",
    "vue-tsc": "^2.2.0"
  },
  "dependencies": {
    "@simplewebauthn/browser": "^11.0.0",
    "@simplewebauthn/server": "^11.0.0",
    "better-sqlite3": "^11.7.0",
    "consola": "^3.4.0",
    "date-fns": "^4.1.0",
    "drizzle-orm": "^0.38.3",
    "drizzle-zod": "^0.6.1",
    "gtfs": "^4.15.12",
    "masto": "^6.10.2",
    "sanitize-html": "^2.14.0",
    "uuid": "^11.0.4",
    "zod": "^3.24.1"
  }
}
